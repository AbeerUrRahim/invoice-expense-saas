{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "api/InvoiceApp.API/Dockerfile"
  },
  "deploy": {
    "startCommand": "dotnet InvoiceApp.API.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
